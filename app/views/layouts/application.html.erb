<!DOCTYPE html>
<html>
  <head>
    <title>RecipeShareApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div>
    <% if logged_in? %>
    <%= button_to "Add a Post", new_post_path, method: :get %>  <%= button_to "All posts", posts_path, method: :get %> 
    <%= button_to "Logout", logout_path, method: "delete" %>
    <% else %>
    <%= button_to "Sign Up", signup_path, method: :get %>  <%= button_to "Login", login_path, method: :get %>
    <% end %>
  </div>
    <%= yield %>
  </body>
</html>
