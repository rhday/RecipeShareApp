<h1><%= @post.title %> comments:</h1>
<p><%= @post.content %></p>
<% @comments.each do |comment| %>
    <br>
    <br>
    <%= comment.content %>
    <br>
    <% if current_user.id == comment.user_id %>
        <%= link_to "Edit comment", edit_comment_path(@post, comment) %>
        <%= button_to "Delete comment", edit_comment_path(@post, comment), method: :delete %>
    <% end %>
<% end %>
<%= link_to "Add a new comment", new_user_post_comment_path(current_user, @post) %>