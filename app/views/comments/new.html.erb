<% if @post %>
<h1>Add a comment for <%= @post.title %></h1>
<% else %>
<h1>Make a comment!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @comment} %>


<%= form_for [@post, @comment] do |f| %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit %>

<% end %>
