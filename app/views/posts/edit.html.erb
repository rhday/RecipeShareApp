<h1>Edit <%= @post.title %>:</h1>

<%= render partial: "layouts/errors", locals: {object: @post} %>

<%= form_for(@post, url: user_post_path) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>  

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.collection_select(:category_id, Category.all, :id, :name)%>
    <%= f.submit "Update Recipe!"%>
<% end %>
