<h1>All Recipes!</h1>
<div id="recipes_container">
<% @posts.each do |post| %>
<div>
    <%= "#{post.title}" %> - <%= post.comments.size %> comment(s)
    <br>
    <%= post.content %>
    <br>
    <%= link_to "See Comments", user_post_comments_path(current_user, post)%>
    <%= button_to "Comment on this recipe", new_user_post_comment_path(current_user, post), method: :get %>
    <% if current_user.id == post.user_id %>
        <%= link_to "Edit Recipe", edit_user_post_path(post.user_id,post)%>
        <%= button_to "Delete Recipe", edit_post_path(post), method: :delete %>
    <% end %>
    <br>
    <br>
    <br>
    </div>
<% end %>
</div>

